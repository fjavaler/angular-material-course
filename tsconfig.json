{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "esModuleInterop": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@angular/material",
      "node_modules/@types/angular"
    ],
    "lib": [
      "es2017",
      "dom",
      "ES2017.object"
    ],
    "useDefineForClassFields": false
  }
}
